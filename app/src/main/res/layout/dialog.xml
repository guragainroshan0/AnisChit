<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="25dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/dialog_top"
        android:textFontWeight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:text="@string/dialog_sanitation"
        android:id="@+id/sanitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <CheckBox
        android:text="@string/dialog_donation"
        android:id="@+id/donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <CheckBox
        android:text="@string/dialog_bloodbank"
        android:id="@+id/blood_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>